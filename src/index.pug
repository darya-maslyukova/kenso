doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title Kenso
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="libs/owlCarousel2/owl.carousel.min.css")
